---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  ogType?: 'website' | 'article';
}

const {
  title = '9592 Solutions',
  description = 'AI systems and software development by Christo Wilken',
  ogType = 'website'
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Canonical URL -->
    <link rel="canonical" href={Astro.url.href} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:site_name" content="9592 Solutions" />
    <meta property="og:type" content={ogType} />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- Theme color -->
    <meta name="theme-color" content="#0a0a0a" />

    <!-- Preload fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "ProfessionalService",
      "name": "9592 Solutions",
      "url": "https://9592.tech",
      "description": "AI systems and software development",
      "founder": {
        "@type": "Person",
        "name": "Christo Wilken",
        "email": "christo@9592.tech"
      },
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Berlin",
        "addressCountry": "DE"
      },
      "areaServed": "Worldwide"
    })} />
  </head>
  <body class="min-h-screen">
    <slot />

    <!-- Mixpanel Analytics -->
    <script type="importmap">
      { "imports": { "mixpanel-browser": "https://cdn.mxpnl.com/libs/mixpanel-js/dist/mixpanel.module.js" } }
    </script>
    <script type="module">
      import mixpanel from 'mixpanel-browser';
      mixpanel.init('7bf933aa178f53606b6072703d1d86d9', {
        track_pageview: true,
        persistence: 'localStorage'
      });

      // Register UTM parameters as super properties (persist across all events)
      const params = new URLSearchParams(window.location.search);
      const utmProps = {};
      ['utm_source', 'utm_medium', 'utm_campaign', 'utm_term', 'utm_content'].forEach(key => {
        const val = params.get(key);
        if (val) utmProps[key] = val;
      });
      if (Object.keys(utmProps).length) mixpanel.register(utmProps);

      // Track CTA clicks
      document.addEventListener('click', (e) => {
        const link = e.target.closest('a');
        if (!link) return;

        const href = link.getAttribute('href');
        if (!href) return;

        // Email CTA
        if (href.startsWith('mailto:')) {
          mixpanel.track('CTA Click', { type: 'email', email: href.replace('mailto:', '') });
        }
        // External project links
        else if (href.startsWith('http') && !href.includes('9592.tech')) {
          mixpanel.track('CTA Click', { type: 'external', url: href, text: link.textContent?.trim().slice(0, 50) });
        }
        // PDF download
        else if (href.endsWith('.pdf')) {
          mixpanel.track('CTA Click', { type: 'download', file: href });
        }
        // Internal navigation (blog, etc)
        else if (href.startsWith('/') && href !== '/') {
          mixpanel.track('CTA Click', { type: 'internal', path: href });
        }
      });
    </script>
  </body>
</html>
